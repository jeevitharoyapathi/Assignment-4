<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.apps.restclienttemplate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.codepath.apps.jeevitharoyapathi.restClient.TwitterApplication"
        android:allowBackup="true"
        android:icon="@drawable/twitterlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="RestClient.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name="com.codepath.apps.jeevitharoyapathi.activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="cptwitter"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity android:name="com.codepath.apps.jeevitharoyapathi.activities.TimelineActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="com.codepath.apps.jeevitharoyapathi.activities.ComposeActivity" />
        <activity
            android:name="com.codepath.apps.jeevitharoyapathi.activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name="com.codepath.apps.jeevitharoyapathi.activities.ProfileActivity"
            android:label="Profile"
            android:parentActivityName="com.codepath.apps.jeevitharoyapathi.activities.HomeActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>